
$(function () {
    var chart;
    $(document).ready(function() {
        Highcharts.setOptions({
            colors: <%=raw @generate_colors%>
        });
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'reviews_chart',
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false
            },
            title: {
                text: 'How easy to use is this drug?'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage}%</b>',
                percentageDecimals: 1
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        color: '#000000',
                        connectorColor: '#000000',
                        formatter: function() {
                            return '<b>'+ this.point.name +'</b>: '+ this.point.y +' reviewers';
                        }
                    }
                }
            },
            series: [{
                type: 'pie',
                name: 'Percentage of reviews',
                data:  [
                    {
                    name: 'Score of 1',
                    y: <%=raw @update_values[@drug.brand_name][0] %> ,
                    url: "google.com"
                    },
                    {
                        name: 'Score of 2',
                        y: <%=raw @update_values[@drug.brand_name][1] %> ,
                        url: "google.com"
                    },
                    {
                        name: 'Score of 3',
                        y: <%=raw @update_values[@drug.brand_name][2] %> ,
                        url: "google.com"
                    },
                    {
                        name: 'Score of 4',
                        y: <%=raw @update_values[@drug.brand_name][3] %> ,
                        url: "google.com"
                    },
                    {
                        name: 'Score of5',
                        y: <%=raw @update_values[@drug.brand_name][4] %> ,
                        url: "google.com"
                    }

                ]
                     }]
        });
        $('#conditions').html("<%= escape_javascript(render "eou_view_form") %>");
    });

});