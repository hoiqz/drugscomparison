<script type="text/javascript" charset="utf-8">
    $(function(){
        $(document).ready(function() {
            new Highcharts.Chart({
                chart:{
                    renderTo: "reviews_chart"

                },
                title:{
                    text: "Average Ratings across user reviews"
                },
                xAxis:{
                    categories: ['Effectiveness','Ease of Use','Satisfactory']
                },
                yAxis:{
                    title:{
                        text: "User Ratings"
                    }
                },
                series:[{
                    type: "column",
                    name: "Avg Effectiveness",
                    data: [<%= raw @avg_effectivness %>]
                },
                    {
                        type: "column",
                        name: "Avg Ease of Use",
                        data: [<%= raw @avg_ease_of_use %>]
                    },
                    {
                        type: "column",
                        name: "Avg Satisfactory",
                        data: [<%= raw @avg_satisfactory %>]
                    }
                ]


            })


        });
    })
</script>