<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= render "layouts/stylesheets" %>
  <%= yield :script %>
</head>
<body>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="border-shadow">
      <div class="header_container">
        <%= image_tag("chosen1blue.png",:class=>"brand") %>
        <%= form_tag searches_path,:class=>"navbar-search pull-right", :method => :get do %>
            <%= text_field_tag :search, params[:search] ,:class=>"search-query", :placeholder=>"Search Drug/Condition" %>
            <button type="submit" class="btn btn-mini"><i class="icon-search"></i></button>
        <% end %>
      </div>
      <%= render "layouts/header"%>
    <div class="span10 offset1">
      <div class="row-fluid">
        <div class="span12">
      <%= yield %>
        </div>
      </div>
    </div>
    <div class="span1">
      <%= render "widgets" %>
    </div>
      </div>
  </div>
  <div class="row-fluid">
    <%= render "layouts/footer" %>
  </div>
</div>

<%= debug(params) if Rails.env.development? %>

</body>
</html>