<% @conditioninfographs.each do |conditioninfograph| %>
  <tr>
    <td><%= conditioninfograph.condition_id %></td>
    <td><%= conditioninfograph.most_reviewed %></td>
    <td><%= conditioninfograph.cheapest %></td>
    <td><%= conditioninfograph.most_satisfied %></td>
    <td><%= conditioninfograph.most_kids_using %></td>
    <td><%= conditioninfograph.total_reviews %></td>
    <td><%= conditioninfograph.top_side_effect %></td>
    <td><%= conditioninfograph.most_easy_to_use %></td>
    <td><%= conditioninfograph.most_effective %></td>
    <td><%= conditioninfograph.overall_winner %></td>
    <td><%= link_to 'Show', conditioninfograph %></td>
    <td><%= link_to 'Edit', edit_conditioninfograph_path(conditioninfograph) %></td>
    <td><%= link_to 'Destroy', conditioninfograph, method: :delete, data: { confirm: 'Are you sure?' } %></td>
