<% content_for :script do %>
    <script type='text/javascript' xmlns="http://www.w3.org/1999/html">
        var word_array = [
                <% @tagshash.each_pair do |key,value|%>
                    {text: "<%=key%>", weight: <%= value.to_i%>, link: {href: "<%= DOMAIN_NAME%>/searches/<%= @drug.id%>/non_form_search?keyword=<%=u key%>&<%= @urlendcoded %>", target: "_blank"}},
                <% end%>
        ];

        $(function () {
            $('.paginator nav span a').live('click', function () {
                $.getScript(this.href);
                return false;
            });

            $(document).bind("ajaxSend", function(){
                toggleOverlay();
            }).bind("ajaxComplete", function(){
                        toggleOverlay();
                    });
//            $('.my-content').scrollspy();
            $("#infograph").popover();
            $("#effectlink").popover();
            $("#eoulink").popover();
            $("#satisfylink").popover();
            $("#tag_cloud_link").popover();
            $('#effectlink').bind('click',function(){
                $('#conditions').show;
            });
            $(".bs-docs-sidenav li").live("click", function(){
                      $(".bs-docs-sidenav li").removeClass("active");
                      $(this).addClass("active");
            });
        });
        function toggleOverlay(){
            var overlay = document.getElementById('overlayid');
            var specialBox = document.getElementById('loadingtext');
//            overlay.style.opacity = .8;
            if(overlay.style.display == "block"){
                overlay.style.display = "none";
                specialBox.style.display = "none";
            } else {
                overlay.style.display = "block";
                specialBox.style.display = "block";
            }
        }

    </script>
<% end %>

