
<p id="notice"><%= notice %></p>
<% content_for :script do %>

    <script type='text/javascript'>
        $(function () {
            $(document).bind("ajaxSend", function(){
                  toggleOverlay();
            }).bind("ajaxComplete", function(){
                        toggleOverlay();
                    });
        $("#overall_link").popover();
        $("#satisfactory_view").popover();
        $("#effectiveness_view").popover();
        $("#eou_view").popover();
        });

        function toggleOverlay(){
            var overlay = document.getElementById('overlayid');
            var specialBox = document.getElementById('loadingtext');
//            overlay.style.opacity = .8;
            if(overlay.style.display == "block"){
                overlay.style.display = "none";
                specialBox.style.display = "none";
            } else {
                overlay.style.display = "block";
                specialBox.style.display = "block";
            }
        }
    </script>
<% end %>

<div class=row>
<div class=" span9">
 <article class="articlecontent">
   <h3 class="static_divider"><%= @condition.name.capitalize %></h3>
   <p><i class="icon-backward"></i> <%= link_to "Back To Condition Index",conditions_path%></p>
   <div id="subheader_holder">
     <h5 class="static_divider">Infograph View</h5>
   </div>
   <div class="static_buttons span8">
     <%= render "chart_buttons" %>
   </div>

  <div id="reviews_chart" class="span8">
    <%= render "infographs" %>
  </div>
 </article>
</div>

<div class="span9">
  <article class="articlecontent">
  <h5 class="static_divider">Infomation pertaining to <%= @condition.name %></h5>
<div class="tabbable widget_container"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">General Information</a></li>
    <li><a href="#tab2" data-toggle="tab"> Drugs (<%= @number_of_drugs%>)</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <p><%= @condition.information %></p>
    </div>
    <div class="tab-pane" id="tab2">
      <p>
        <b>Drugs related to this condition: </b>
      </p>

      <table class="table table-hover" id="conditions_table">
        <thead>
        <tr>
          <th>Brand</th>
          <!--<th>Action</th>-->
        </tr>
        </thead>
        <tbody>
        <% @drugs.each do |drug|%>
            <tr>
              <td><%= link_to drug.brand_name, drug_reviews_path(drug.id) %>  <i class="icon-zoom-in" title="Go to this drug!"></i> </td>
              <!--<td></td>-->
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  </article>
</div>
</div>

<% content_for :side_widget do  %>
    <%= render "side_widget_last_viewed" %>
<% end %>
