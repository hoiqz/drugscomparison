<p id="notice"><%= notice %></p>

<p>
  <b>Condition name:</b>
  <%= @condition.name %>
</p>

<p>
  <b>Information</b>
  <%= @condition.information %>
</p>



<div id="chart_container">
<div id="reviews_chart">
  <div class="hero-unit">
  <h1>Get started!</h1>
  <p>Click on the buttons below to start comparing drugs</p>
  <p>
    <a class="btn btn-primary btn-large">
      Start!
    </a>
  </p>
  </div>
</div>
  <div id="conditions">

  </div>
</div>

<div id="static_buttons">
<%= render "chart_buttons" %>
</div>



<p>
  <b>Drugs related to this condition: </b>
</p>

<table class="table table-hover">
  <thead>
  <tr>
  <th>Brand</th>
  <th>Number of reviews</th>
  </tr>
  </thead>
  <tbody>
  <% @drugs.each do |drug|%>
      <tr>
        <td><i class="icon-eye-open"></i>   <%= link_to "#{drug.brand_name}", drug_path(drug.id) %></td>
        <td><%= drug.reviews.count %></td>
      </tr>
  <% end %>
  </tbody>
    </table>
