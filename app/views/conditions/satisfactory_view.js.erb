$(function () {

    var chart;
    $(document).ready(function() {
        var review_container = document.createElement('div');
        review_container.style.height=<%= (((@drugs.count)/2.0).ceil) * 250 %>+'px';
        document.getElementById('reviews_chart').innerHTML='';
        document.getElementById('reviews_chart').appendChild(review_container);

        Highcharts.setOptions({
            colors: <%=raw @generate_colors%>
        });
        chart = new Highcharts.Chart({
            chart: {
                renderTo: review_container,
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false
            },
            labels:{
                items: [
                    <% i=1%>
                    <% y=150%>     // starting point of first plot
                    <% x=150%>
                    <% @drugs.each do |drug| %>
                    <%= ',' if i>1 %>
                    {
                        html: '<b><%= drug.brand_name %></b>',
                        <% if i.odd? %>
                        <% if i !=1 %>  // Case row 1 column2; i!=1 meaning plots 3,5,7,9 ...
                        style: {
                            left: '150px',
                            top: '<%= y+100 %>px'
                        },
                        <% y=y+200 %>
                        <% else %>      // Case row 1 column1
                        style: {
                            left: '150px',
                            top: '0px'
                        }   ,
                        <% end%>
                        <% else %>       //case: row = 2
                        <% if i !=2 %>                       // Case row 2 column2
                        style: {
                            left: '550px',
                            top: '<%= x+100 %>px'
                        }   ,
                        <% x=x+200 %>
                        <% else %>         // Case row 2 column1
                        style: {
                            left: '550px',
                            top: '0px'
                        }
                        <% end%>
                        <% end%>
                    }
                    <% i=i+1 %>
                    <% end %>
                ]
            },
            title: {
                text: 'Satisfactory ratings across related drugs'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage}%</b>',
                percentageDecimals: 1
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        color: '#F8F8F8',
                        connectorColor: '#F8F8F8',
                        formatter: function() {
                            return '<b>'+ this.point.name +'</b>: '+ this.point.y +' reviewers';
                        }
                    }
                }
            },
            series: [
                <% i=1%>
                <% y=150%>
                <% x=150%>
                <% @drugs.each do |drug| %>
                <%= ',' if i>1 %>
                {
                    type: 'pie',
                    size: 100,
                    name: '<%= drug.brand_name %>',
                    <% if i.odd? %>
                    <% if i !=1 %>
                    center: [ 200, <%= y+200 %> ],
                    <% y=y+200 %>
                    <% else %>
                    center: [ 200, 100 ],
                    <% end%>
                    <% else %>
                    <% if i !=2 %>
                    center: [ 500, <%= x+200 %> ],
                    <% x=x+200 %>
                    <% else %>
                    center: [ 500, 100 ],
                    <% end%>
                    <% end%>
                    data: [
                        ['Score of 1',<%=raw @update_values[drug][0] %> ],
                        ['Score of 2',<%=raw @update_values[drug][1] %> ],
                        ['Score of 3',<%=raw @update_values[drug][2] %> ],
                        ['Score of 4',<%=raw @update_values[drug][3] %> ],
                        ['Score of 5',<%=raw @update_values[drug][4] %> ]
                    ]
                }
                <% i=i+1 %>
                <% end %>

            ]
        });
        $('#conditions').html("<%= escape_javascript(render "satisfactory_view_form") %>");
    });

});