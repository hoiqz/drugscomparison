<h1>Listing conditions</h1>

<table>
  <tr>
    <th>Condition  ID</th>
    <th>Condition</th>
    <th>Related Drug</th>
  </tr>

  <% @conditions.each do |condition| %>
      <tr>
        <td><%= condition.id %></td>
        <td><%= condition.information %></td>
        <td><%= condition.get_related_drugs %></td>
        </tr>
  <% end %>
</table>

