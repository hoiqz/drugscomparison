

<div class="box span8 border-shadow">
  <span class="miniheader">All Conditions</span>
  <article class="articlecontent">
    <h1>Conditions  A-Z</h1>
    <div class="pagination pagination-mini pagination-left">
      <ul>
        <% @alphabetical.each do |letter| %>
            <%= content_tag :li, link_to(letter, conditions_pagination_path(:letter=>letter.downcase)) %>
        <% end %>
      </ul>
    </div>
    <table class="table table-striped">
      <tr>
        <th>Condition</th>
      </tr>

      <% @conditions.each do |condition| %>
          <% next if (condition.name == "Other"|| condition.name =="") %>
          <tr>
            <td><%= link_to condition.name, condition %></td>
          </tr>
      <% end %>
    </table>
  </article>
</div>

<div class="well span3 border-shadow">
  <ul class="nav nav-list">
    <li class="nav-header">Top Conditions</li>
    <li class="divider"></li>

  </ul>
</div>


