<script type="text/javascript" charset="utf-8">
    $(function () {

        window.chart = new Highcharts.Chart({

            chart: {
                renderTo: 'reviews_chart',
                polar: true

            },

            title: {
                text: 'Average Drug Performance According to User Reviews'
            },

            pane: {
                center: ['50%', '50%'],
                size: '80%',
                startAngle: 0,
                endAngle: 360
            },

            xAxis: {
                categories: ['Effectiveness', 'Ease of Use', 'Satisfactory'],
                tickmarkPlacement: 'on',
                gridLineWidth: 1,
                gridLineColor: 'grey',
                lineWidth: 3,
                labels: {
                    formatter: function () {
                        return this.value ;
                    }
                }

            },

            yAxis: {
                min: 0,
                max: 5,
                tickInterval: 1
            },

            tooltip: {
                shared: true

            },

            legend: {
                align: 'right',
                verticalAlign: 'top',
                y: 150,
                layout: 'vertical' ,
                labelFormatter: function() {
                    return this.name+ " (click to hide)";
                }
            },

                series:[
                    <% i=1%>
                    <% @drugs.each do |drug| %>
                    <%= ',' if i>1 %>
                    {
                        type: 'area',
                        name: '<%= drug.brand_name %>',
                        <% returnarr= [drug.avg_eff.round(2),drug.avg_eou.round(2),drug.avg_sat.round(2)]%>
                        data: <%=raw returnarr%> ,
                        lineWidth: 2,
                        marker: {
                            enabled: false
                        },
                        shadow: true
                    }
                    <% i=i+1 %>
                    <% end %>

                ]
        });
    });
</script>
