<script type="text/javascript" charset="utf-8">

    $(function(){
        $(document).ready(function() {
            new Highcharts.Chart({
                chart:{
                    renderTo: "reviews_chart" ,
                    type: 'column'
                },
                title:{
                    text: "Ratings across all related drugs reviews"
                },
                xAxis:{
                    categories: ['Effectiveness', 'Ease of Use', 'Satisfactory']

                },
                yAxis:{
                    title:{
                        text: "User Ratings"
                    }
                },
                series:[
                        <% i=1%>
                       <% @drugs.each do |drug| %>
                        <%= ',' if i>1 %>
                        {
                        type: 'column',
                        name: '<%= drug.brand_name %>',
                            <% retarr= [drug.avg_eff.to_f,drug.avg_eou.to_f,drug.avg_sat.to_f]%>
                        data: <%=raw retarr%>
                        }
                        <% i=i+1 %>
                    <% end %>

                ]


            })


        });
    })
</script>
